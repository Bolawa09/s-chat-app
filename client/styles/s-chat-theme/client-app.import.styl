.s-chat-client-app-main
    grid()
    height s('calc(100vh - %s - %s - %s)', size-main-header-height, size-app-header-height, size-small-footer-height) // all - main header - client-app-header - footer-small
    background-color darken(color-main-light, 2%)
    +below(rem-calc(480))
        height s('calc(100vh - %s - %s)', size-main-header-height, size-app-header-height) // we don't want footer here
    .client-app-no-data
        padding-top rem-calc(50)
        padding-bottom rem-calc(50)
        padding-left rem-calc(30)
        padding-right rem-calc(30)
        font-size rem-calc(22)
        font-weight 300
        text-align center
        color darken(color-main-light, 30%)
        display block
        width 100%
        +below(rem-calc(624))
            font-size rem-calc(18)
    .client-app-sidebar
        flex 0 0 rem-calc(size-left-elems)
        height 100%
        overflow-y auto
        background-color color-main-contrast2
        color color-main-light
        padding-top rem-calc(15)
        padding-bottom rem-calc(15)
        &.closed
            flex 0
        .client-app-sidebar-chat-item
            padding rem-calc(10) rem-calc(15)
            border-bottom rem-calc(1) solid lighten(color-main-contrast2, 5%)
            .chat-session-item-link
                font-size rem-calc(12)
                color darken(color-main-light, 5%)
                a
                    color inherit
                    text-decoration none
                    font-weight 600
                    &:hover
                        text-decoration underline
            .chat-session-item-icon
                font-size rem-calc(14)
                padding-right rem-calc(2)
                padding-left rem-calc(2)
                vertical-align middle
                &.urgent
                    font-size rem-calc(16)
            .chat-session-item-link-opened
                font-weight 400
            .chat-session-item-id
                font-size rem-calc(10)
                color color-main-light
                > .chat-session-item-icons
                    transition opacity .3s
                    &.hover-visible
                        opacity 0
                        vertical-align top
            &:hover
                .chat-session-item-id
                    > .chat-session-item-icons
                        &.hover-visible
                            opacity 1
            .chat-session-item-icons
                float right
                .clickable
                    cursor pointer
            .soon-removed
                color darken(color-main-light, 35%)
        .spinner > div
            background-color color-main-light
        &::-webkit-scrollbar
            width rem-calc(5)
            background-color lighten(color-main-contrast2, 20%)
        &::-webkit-scrollbar-track
          background-color color-main-contrast2
        &::-webkit-scrollbar-thumb
            background-color lighten(color-main-contrast2, 20%)
        .client-app-sidebar-list
            li
                list-style-type none
                padding-left rem-calc(15)
                padding-right rem-calc(15)
                a
                    color darken(color-main-light, 10%)
                    text-decoration none
                    font-size rem-calc(13)
                    > i
                        font-size rem-calc(10)
                        margin-right rem-calc(5)
                    &:hover
                        color color-main-light
    .client-app-content
        flex 1
        height 100%
        padding rem-calc(15) rem-calc(10)
        background-color darken(color-main-light, 2%)
        overflow-y auto
        &.docs
            padding rem-calc(25) rem-calc(30)
        .client-app-content-docs
            background-color color-main-light
            padding rem-calc(40) rem-calc(50)
            max-width rem-calc(800)
            width 100%
            min-width rem-calc(250)
            +below(rem-calc(480))
                padding rem-calc(40) rem-calc(25)
            a
                color color-main-contrast1
            p, ul
                margin-bottom rem-calc(15)
                font-size rem-calc(14)
            ul
                margin-left rem-calc(20)
            h1, h2, h3
                margin-bottom rem-calc(10)
                margin-top 0
                font-weight 400
            h1
                margin-bottom rem-calc(25)
                +below(rem-calc(480))
                    font-size rem-calc(26)
            pre code
                font-size rem-calc(13)
            pre
                margin-bottom rem-calc(15)
            .docs-icon
                color color-main-contrast1
            .docs-pagination
                @extend .cf
                margin-top rem-calc(30)
                .docs-pagination-next,
                .docs-pagination-prev
                    display block
                    text-decoration none
                    font-size rem-calc(14)
                    i
                        font-size rem-calc(13)
                .docs-pagination-next
                    float right
                .docs-pagination-prev
                    float left

.s-chat-client-app-header
    height rem-calc(size-app-header-height)
    border-bottom rem-calc(1) solid darken(color-main-light, 15%)
    background-color darken(color-main-light, 5%)
    color color-main-dark
    grid(cells-align: 'center')
    .client-app-header-tools
        cursor pointer
        font-size rem-calc(20)
        color color-main-contrast2
        padding-right rem-calc(3)
        padding-left rem-calc(3)
        outline none
    .client-app-header-left
        flex 0 0 rem-calc(size-left-elems)
        max-width rem-calc(size-left-elems) // Firefox fix
        padding-left rem-calc(15)
        padding-right rem-calc(15)
        height rem-calc(50)
        line-height rem-calc(50)
        color color-main-light
        background-color color-main-contrast1
        font-weight 400
        &.closed
            flex 0
            width 0
            padding-left 0
            padding-right 0
            > div
                width 0
        > div
            width 100%
            white-space nowrap
            overflow hidden
            text-overflow ellipsis
        +below(rem-calc(526))
            display none
    .client-app-header-right
        flex 1
        text-align right
        padding-right rem-calc(15)
        font-weight 300
        .wrapper
            grid()
            a
                color inherit
                text-decoration none
                &.text-only
                    &:hover
                        text-decoration underline
            .left
                cell(4, 9)
                text-align left
            .right
                cell(5, 9)

.client-app-list-content
    height 100%
    flex 1
    overflow-y auto
.centered-wrapper
    center(1200)
.s-chat-client-list
    padding-top rem-calc(50)
    padding-bottom rem-calc(50)
    text-align center
    +below(rem-calc(624))
        padding-bottom rem-calc(25)
    .s-chat-client-list-item
        text-align left
        width 94%
        max-width rem-calc(360)
        display inline-block
        background-color color-main-light
        border rem-calc(1) solid darken(color-main-light, 10%)
        margin-bottom rem-calc(5)
        .item-header
            padding rem-calc(5)
            background-color color-main-contrast2
            color color-main-light
            font-size rem-calc(14)
            a
                color inherit
                text-decoration none
            grid(cells-align: 'center')
            .left
                cell(4, 5)
            .right
                cell(1, 5)
                font-size rem-calc(18)
                cursor pointer
                text-align right
        .item-body
            padding rem-calc(25) rem-calc(15)
            font-size rem-calc(14)
            a
                color color-main-contrast1
                text-decoration none
                &:hover
                    text-decoration underline
            .ti-help-alt
                float right
                vertical-align bottom
                margin-top rem-calc(3)
            .label
                display inline-block
                width rem-calc(100)
                font-weight 600
        .item-footer
            display block
            padding rem-calc(15)
            text-align center
            background-color darken(color-main-light, 5%)
            border-top rem-calc(1) solid darken(color-main-light, 10%)
            text-decoration none
            color color-main-contrast2
            font-weight 700
            font-size rem-calc(16)

.s-chat-client-list-form
    center(700)
    padding rem-calc(30)
    @extend .cf
    .s-chat-client-add,
    .s-chat-client-submit
        margin 0
        border 0
        display block
        float left
        line-height rem-calc(50)
        padding-left rem-calc(20)
        padding-right rem-calc(20)
    .s-chat-client-add
        width 80%
        outline none
        +below(rem-calc(624))
            width 100%
    .s-chat-client-submit
        width 20%
        background-color lighten(color-main-contrast2, 20%)
        color color-main-light
        transition background-color .3s
        &:hover
            background-color color-main-contrast2
        +below(rem-calc(624))
            width 100%

.s-chat-footer-small
    position absolute
    font-size rem-calc(13)
    bottom 0
    width 100%
    background-color darken(color-main-light, 20%)
    color darken(color-main-light, 50%)
    line-height rem-calc(size-small-footer-height)
    display flex
    font-weight 300
    +below(rem-calc(480))
        display none
    .footer-small-left
        flex 0 0 rem-calc(size-left-elems)
        background-color color-main-contrast2
        padding-left rem-calc(15)
        &.closed
            flex 0
            overflow hidden
            padding-left 0
            white-space nowrap
    .footer-small-right
        flex 1
        padding-right rem-calc(15)
        padding-left rem-calc(15)
        border-top rem-calc(1) solid darken(color-main-light, 15%)
        background-color darken(color-main-light, 5%)
        text-align right
        a
            color darken(color-main-light, 60%)
            text-decoration none
            &:hover
                text-decoration underline
        &.app-listing
            background-color color-main-contrast2
            border-top 0