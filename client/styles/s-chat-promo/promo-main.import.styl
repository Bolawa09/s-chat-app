.s-chat-main-container
    width 100%
    overflow auto
    min-height 100vh
    background-color darken(color-main-light, 5%)
    padding-top rem-calc(size-main-header-height)
    position relative
    &.promo-page
        padding-bottom size-big-footer-height

.s-chat-promo-container
    center(1200)
    grid()
    height 100%

.s-chat-promo-main-container
    @extend .cf
    .intro-section-left
        cell(1, 2)
        padding rem-calc(80) rem-calc(15)
        +below(rem-calc(1024))
            cell(3, 4)
        +below(rem-calc(680))
            stack()
    .intro-section-right
        cell(1, 2, align: 'center')
        padding 0 rem-calc(15)
        img
            max-width 100%
        +below(rem-calc(1024))
            display none
    .intro-section
        background-color color-main-contrast2
        color color-main-light
        background-image url('/promo-header-bg.jpg')
        background-repeat no-repeat
        background-size cover
        background-position 50%
        .intro-section-header
            font-weight 900
            font-size rem-calc(72)
            margin-top 0
            margin-bottom 0
        .intro-section-subheader
            font-weight 300
        .intro-section-desc
            font-weight 300
            color lighten(color-main-contrast2, 45%)
            margin-top rem-calc(15)
            font-size rem-calc(18)
        .intro-section-button
            display block
            float left
            padding rem-calc(10) rem-calc(35)
            border-radius rem-calc(3)
            text-decoration none
            color color-main-light
            background-color rgba(color-main-contrast1, .9)
            margin-top rem-calc(20)
            margin-right rem-calc(5)
            transition background-color .3s
            font-weight 300
            &:hover
                background-color darken(color-main-contrast1, 10%)
            &.white
                background-color rgba(darken(color-main-light, 15%), .9)
                color color-main-dark
                &:hover
                    background-color darken(color-main-light, 25%)
    .options-section
        background-color darken(color-main-light, 5%)
        color color-maind-dark
        .options-section-header
            font-size rem-calc(32)
            font-weight 300
            text-align center
            margin-top 0
            .bold
                font-weight 600
            img
                width rem-calc(75)
                margin-bottom rem-calc(20)
            +below(rem-calc(600))
                font-size rem-calc(28)
        .options-section-subheader
            font-size rem-calc(18)
            font-weight 300
            text-align center
            margin 0
            margin-bottom rem-calc(70)
        .options-section-wrapper
            stack()
            padding rem-calc(60) rem-calc(15) rem-calc(100)
        .options-pricing-table-wrapper
            grid(cells-align: 'stretch')
            .options-pricing-table-item
                cell(1, 3)
                background-color color-main-light
                color color-main-contrast2
                padding rem-calc(35)
                padding-bottom rem-calc(110)
                border-radius rem-calc(5)
                box-shadow 0 rem-calc(5) rem-calc(20) rgba(color-main-dark, .05), 0 rem-calc(15) rem-calc(30) rem-calc(-10) rgba(color-main-dark, .3)
                transition background-color .3s
                position relative
                &:hover
                    background-color darken(color-main-light, 2%)
                .header
                    font-size rem-calc(32)
                    text-align center
                    font-weight 300
                    border-bottom rem-calc(1) solid darken(color-main-light, 10%)
                    padding-bottom rem-calc(15)
                    margin-bottom rem-calc(25)
                .price
                    font-size rem-calc(26)
                    font-weight 300
                    text-align center
                    margin-bottom rem-calc(25)
                    color color-main-contrast1
                    span
                        display inline-block
                        padding rem-calc(2) rem-calc(25)
                        border solid rem-calc(1) color-main-contrast1
                .desc
                    font-weight 300
                    text-align center
                    font-size rem-calc(14)
                .list
                    padding-left rem-calc(35)
                    font-size rem-calc(14)
                    font-weight 300
                    a
                        color color-main-contrast1
                        text-decoration none
                .footer-button
                    position absolute
                    bottom 0
                    left 0
                    width 100%
                    text-align center
                    padding rem-calc(25) rem-calc(35) rem-calc(35)
                    .button
                        padding rem-calc(10) rem-calc(35)
                        border-radius rem-calc(3)
                        border-radius rem-calc(3)
                        text-decoration none
                        color color-main-light
                        background-color color-main-contrast1
                        &:hover
                            background-color darken(color-main-contrast1, 10%)
                +below(rem-calc(1124))
                    &:nth-child(1),
                    &:nth-child(2)
                        cell(1, 2)
                    &:nth-child(3)
                        cell-offset(1, 4)
                        cell(1, 2)
                +below(rem-calc(680))
                    &:nth-child(1),
                    &:nth-child(2),
                    &:nth-child(3)
                        stack()
                    &:nth-child(3)
                        margin-left: auto !important;

.footer-big
    @extend .cf
    position absolute
    bottom 0
    width 100%
    background-color color-main-contrast2
    color color-main-light
    height size-big-footer-height
    padding rem-calc(25) rem-calc(15)
    font-weight 300
    font-size rem-calc(13)
    color darken(color-main-light, 30%)
    .footer-big-left,
    .footer-big-right
        cell(1, 2, align: 'center')
    .footer-big-right
        text-align right
    a
        color darken(color-main-light, 5%)
        text-decoration none
        &:hover
            text-decoration underline
    .social-icons
        a
            margin-left rem-calc(5)
            &:hover
                text-decoration none
    div
        width 100%

.not-found-page-container
    grid(cells-align: 'center')
    height calc(100vh - 50px)
    .not-found-page-elems
        cell(1, 1)
        text-align center
        h1
            font-size rem-calc(46)
            font-weight 300
        img
            width rem-calc(80)
        a
            color color-main-contrast1